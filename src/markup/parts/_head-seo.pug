- const ogType = pageType ? pageType : projectType;

//- Мета
link(rel="canonical", href=siteUrl)
meta(name="application-name", content=siteTitle)
meta(name="apple-mobile-web-app-title", content=siteTitle)
meta(property="og:title", content=siteTitle)
meta(property="og:locale", content="ru")
meta(property="og:description", content=siteDescription)
meta(property="og:url", content=siteUrl)
meta(property="og:site_name", content=siteDescription)
meta(property="og:type", content=ogType)
meta(property="og:image", content=siteUrl + baseUrl + "img/cover.jpg")
if (ogType==="article")
  meta(property="article:published_time", content="2025-12-31T00:00:00+06:00")

meta(property="twitter:card", content="summary")
meta(property="twitter:title", content=siteTitle)
meta(property="twitter:image", content=siteUrl + baseUrl + "img/cover.jpg")
if (ogType==="article")
  script(type="application/ld+json").
    {
      "@context":"https://schema.org",
      "@type":"BlogPosting",
      "dateModified":"2023-12-31T00:00:00+06:00",
      "datePublished":"2023-12-31T00:00:00+06:00",
      "headline":"#{siteTitle}",
      "description":"#{siteDescription}",
      "name":"#{siteDescription}",
      "url":"#{siteUrl}"
    }
else
  script(type="application/ld+json").
    {
      "@context":"https://schema.org",
      "@type":"WebSite",
      "headline":"#{siteTitle}",
      "description":"#{siteDescription}",
      "name":"#{siteDescription}",
      "url":"#{siteUrl}"
    }

