mixin button(props)
  - var tag = props.href ? 'a' : 'button'
  - var type = props.type || null;
  - var viewClass = props.view ? `button--${props.view}` : ''
  - var download = props.download ? props.href : null
  #{tag}(class=`button ${viewClass}`, download=download, href=props.href, type=type)&attributes(attributes)= props.text
